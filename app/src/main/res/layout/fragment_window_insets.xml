<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:title="@string/title_window_insets"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/showKeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_keyboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showStatusBarButton"
        app:layout_constraintEnd_toStartOf="@id/hideKeyboardButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hideKeyboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hide_keyboard"
        app:layout_constraintStart_toEndOf="@id/showKeyboardButton"
        app:layout_constraintTop_toBottomOf="@id/hideStatusBarButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/showStatusBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/show_status_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintEnd_toStartOf="@id/hideKeyboardButton"
        app:layout_constraintBottom_toTopOf="@id/showKeyboardButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hideStatusBarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/hide_status_bar"
        app:layout_constraintStart_toEndOf="@id/showKeyboardButton"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hideKeyboardButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>