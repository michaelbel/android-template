<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="org.michaelbel.template.features.main.MainFragment"
        android:label="Main"/>

    <fragment
        android:id="@+id/reviewFragment"
        android:name="org.michaelbel.template.features.inappreview.ReviewFragment"
        android:label="InAppReview"/>

    <fragment
        android:id="@+id/savedStateFragment"
        android:name="org.michaelbel.template.savedstate.SavedStateFragment"
        android:label="SavedState"
        tools:layout="@layout/fragment_saved_state"/>

    <fragment
        android:id="@+id/toastFragment"
        android:name="org.michaelbel.template.features.toast.ToastFragment"
        android:label="Toast"/>

    <fragment
        android:id="@+id/insetsFragment"
        android:name="org.michaelbel.template.windowinsets.WindowInsetsFragment"
        android:label="Insets"
        tools:layout="@layout/fragment_window_insets"/>

    <fragment
        android:id="@+id/pagingFragment"
        android:name="org.michaelbel.template.paging.ui.SearchReposFragment"
        android:label="Paging"
        tools:layout="@layout/fragment_search_repositories"/>

    <fragment
        android:id="@+id/adsFragment"
        android:name="org.michaelbel.template.ads.AdsFragment"
        android:label="Ads"
        tools:layout="@layout/fragment_ads"/>

    <fragment
        android:id="@+id/navArgsFragment"
        android:name="org.michaelbel.template.features.navagrs.NavArgsFragment"
        android:label="NavArgs">

        <argument
            android:name="firstText"
            app:argType="string"
            app:nullable="true"/>

        <argument
            android:name="secondNumber"
            android:defaultValue="0"
            app:argType="integer"/>

    </fragment>

    <fragment
        android:id="@+id/configFragment"
        android:name="org.michaelbel.template.features.config.RemoteConfigFragment"
        android:label="Config"/>

    <fragment
        android:id="@+id/materialYouColorsFragment"
        android:name="org.michaelbel.template.features.materialyoucolors.MaterialYouColorsFragment"
        android:label="MaterialYou"/>

    <fragment
        android:id="@+id/fontsFragment"
        android:name="org.michaelbel.template.features.fonts.FontsFragment"
        android:label="Fonts"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="org.michaelbel.template.features.search.SearchFragment"
        android:label="Search"/>

    <fragment
        android:id="@+id/socialFragment"
        android:name="org.michaelbel.template.features.social.SocialFragment"
        android:label="Social"/>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="org.michaelbel.template.features.notifications.NotificationsFragment"
        android:label="Notifications"/>

    <fragment
        android:id="@+id/constraintsFragment"
        android:name="org.michaelbel.template.features.constraints.ConstrainsFragment"
        android:label="Constrains"/>

    <fragment
        android:id="@+id/settingsPanelFragment"
        android:name="org.michaelbel.template.features.settingspanel.SettingsPanelFragment"
        android:label="SettingsPanel"/>

    <fragment
        android:id="@+id/systemServicesFragment"
        android:name="org.michaelbel.template.features.systemservices.SystemServicesFragment"
        android:label="SystemServices"/>

</navigation>