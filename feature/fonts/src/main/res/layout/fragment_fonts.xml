<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/title_fonts"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            tools:ignore="HardcodedText">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans"
                android:text="Open Sans"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansLightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_light"
                android:text="Open Sans Light"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansBoldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_bold"
                android:text="Open Sans Bold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansBoldItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_bold_italic"
                android:text="Open Sans Bold Italic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansCondensedBoldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_condensed_bold"
                android:text="Open Sans Condensed Bold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansCondensedLightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_condensed_light"
                android:text="Open Sans Condensed Light"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansCondensedLightItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_condensed_light_italic"
                android:text="Open Sans Condensed Light Italic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansExtraboldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_extrabold"
                android:text="Open Sans Extrabold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansExtraboldItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_extrabold_italic"
                android:text="Open Sans Extrabold Italic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_italic"
                android:text="Open Sans Italic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansLightItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_light_italic"
                android:text="Open Sans Light Italic"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansSemiboldTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Open Sans Semibold"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/openSansSemiboldItalicTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:gravity="start"
                android:fontFamily="@font/open_sans_semibold_italic"
                android:text="Open Sans Semibold Italic"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>